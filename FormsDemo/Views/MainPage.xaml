<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FormsDemo.Views.MainPage"
             Title="MainPage">
    <StackLayout>
        <Button Text="CornerLayout"
                Command="{Binding DisplayPageCommand}"
                CommandParameter="CornerLayoutPage" />
      <Button Text="SemiStackLayout"
                Command="{Binding DisplayPageCommand}"
                CommandParameter="SemiStackLayoutPage" />
        <Button Text="Reactive Demo"
                Command="{Binding DisplayPageCommand}"
                CommandParameter="ObservableDemoPage" />
        <Button Text="Reactive Async Demo"
                Command="{Binding DisplayPageCommand}"
                CommandParameter="ObservableAsyncDemoPage" />
    </StackLayout>

</ContentPage>